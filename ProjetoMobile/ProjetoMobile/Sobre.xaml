<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoMobile.Sobre"
             BackgroundColor="#3B5998">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="Livro.Png"
               WidthRequest="120"
               Margin="0,50,0,0"/>
            <Label Text="Historia da Biblioteca"
                   HorizontalTextAlignment="Center"/>
            <Label Text=" A Biblioteca foi inventada no dia 18 de fevereiro de 2019, por Mateus Justino da Rocha."
                       Margin="10,25,10,0"/>
            <Label Text="Essa Biblioteca foi criada para a conclusão do modulo mobile"
                   Margin="10,0,10,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>